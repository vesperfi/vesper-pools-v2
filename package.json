{
  "name": "vesper-pools",
  "version": "2.0.6",
  "description": "Vesper finance holding pools",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "solhint": "solhint './contracts/**/*.sol'",
    "solhint:fix": "prettier --write 'contracts/**/*.sol'",
    "lint": "eslint --cache ./test/*",
    "lint:fix": "eslint --cache --fix ./test --ext .js",
    "hardhat": "hardhat",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "build": "npm run clean && npm run compile",
    "coverage": "hardhat coverage",
    "deploy": "hardhat deploy",
    "fork": "hardhat node --no-deploy",
    "test": "hardhat test",
    "verify": "hardhat etherscan-verify",
    "size-contract": "hardhat size-contracts",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "devDependencies": {
    "@ethersproject/hardware-wallets": "^5.4.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^3.0.0",
    "@openzeppelin/test-helpers": "^0.5.9",
    "@types/mocha": "^8.2.2",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "6.8.0",
    "eslint-config-bloq": "2.3.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jsdoc": "20.3.1",
    "eslint-plugin-mocha": "6.2.2",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prefer-arrow": "1.1.7",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-require-path-exists": "1.1.9",
    "eslint-plugin-standard": "4.0.1",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.4.5",
    "hardhat": "^2.6.0",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "0.8.11",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-log-remover": "^2.0.1",
    "husky": "^6.0.0",
    "ledger-provider": "github:bloq/ledger-provider",
    "p-series": "^2.1.0",
    "prettier-plugin-solidity": "1.0.0-beta.10",
    "regenerator-runtime": "^0.13.7",
    "solc": "^0.6.12",
    "solhint": "^3.3.2",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.12"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7.0.0"
  }
}